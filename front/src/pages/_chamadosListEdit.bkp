import React, { useState } from "react";
import Papa from "papaparse"; // Biblioteca para fazer o parse do CSV

export default function _ChamadosListEdit() {
  const [data, setData] = useState([]);

  // Função para fazer o parse do arquivo CSV
  const handleFileUpload = (e) => {
    const file = e.target.files[0];
    Papa.parse(file, {
      header: true,
      complete: (result) => {
        setData(result.data);
      },
    });
  };

  // Função para deletar uma linha da tabela
  const handleDelete = (index) => {
    setData((prevData) => prevData.filter((_, i) => i !== index));
  };

  // Função para editar uma linha da tabela
  const handleEdit = (index) => {
    // Implemente a lógica de edição aqui
    console.log("Editar linha:", data[index]);
  };

  const save = (index) => {
