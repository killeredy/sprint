    console.log("Editar linha:", data[index]);
  };

  return (
    <div className="App">
      <h3>Import Chamados</h3>
      <input type="file" onChange={handleFileUpload} accept=".csv" />
      <hr className="my-5" />
      <table className="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Número</th>
            <th>Descrição</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {data.map((row, index) => (
            <tr key={index}>
              <td>{row.id}</td>
              <td>{row.numero}</td>
              <td>{row.descricao}</td>
              <td className="d-flex gap-2">
                <button
                  className="btn btn-primary"
                  onClick={() => handleEdit(index)}
                >
                  Editar
                </button>
                <button
                  className="btn btn-danger"
